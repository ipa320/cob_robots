<?xml version="1.0"?>
<launch>

	<!-- start laser driver -->
	<node name="laser_front" pkg="cob_sick_s300" type="cob_sick_s300" respawn="false" output="screen" >
		<rosparam command="load" file="$(find cob_hardware_config)/$(env ROBOT)/config/laser_front.yaml"/>
		<remap from="laser_front/scan" to="/scan_front_raw"/>
	</node>
	
	<!-- laser filter -->
	<node name="laser_front_filter" pkg="cob_sick_s300" type="cob_scan_filter" respawn="false" output="screen" ns="laser_front" >
		<remap from="/laser_front/scan" to="/scan_front_raw"/>
		<remap from="/laser_front/scan_filtered" to="/scan_front"/>
	</node>

</launch>
