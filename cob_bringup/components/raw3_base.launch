<?xml version="1.0"?>
<launch>
	<arg name="robot"/>	
	<arg name="can_device"/>
	<arg name="use_fts" default="false"/>

	<arg name="pkg_hardware_config" default="$(find cob_hardware_config)"/>
	<arg name="sim" default="false"/>

	<arg name="driver" value="true" unless="$(arg use_fts)"/>
	<arg name="driver" value="false" if="$(arg use_fts)"/>

	<arg name="driver_yaml" value="$(arg pkg_hardware_config)/robots/common/raw3_base_driver.yaml"/>
	<arg name="controller_yaml" value="$(arg pkg_hardware_config)/robots/common/raw3_base_controller.yaml" if="$(arg driver)"/>
    
	<arg name="controller_yaml" value="$(arg pkg_hardware_config)/robots/common/raw3_base_controller_fts.yaml" unless="$(arg sim)" />
	<arg name="controller_yaml" value="$(arg pkg_hardware_config)/robots/common/raw3_base_controller_fts_sim.yaml" if="$(arg sim)"  />
    
	<include file="$(find cob_bringup)/components/ros_control_base.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="pkg_hardware_config" value="$(arg pkg_hardware_config)"/>
		<arg name="driver_yaml" value="$(arg driver_yaml)"/>
		<arg name="controller_yaml" value="$(arg controller_yaml)"/>
		<arg name="reset_errors_before_recover" value="true"/>
		<arg name="can_device" value="$(arg can_device)"/>
		<arg name="sim" value="$(arg sim)"/>
	</include>
	
</launch>
