<?xml version="1.0"?>
<launch>

	<arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
	<arg name="pkg_hardware_config" default="$(find cob_hardware_config)"/>
	<arg name="name"/>


	<!-- start laser driver -->
	<node pkg="hokuyo_node" type="hokuyo_node" name="$(arg name)" respawn="false" output="screen">
    	<!-- load parameter -->
    	<rosparam command="load" file="$(arg pkg_hardware_config)/$(arg robot)/config/$(arg name).yaml"/>
		<remap from="scan" to="~scan_raw"/>
	</node>

	<!-- laser filter -->
	<include file="$(find cob_bringup)/drivers/laser_scan_filter.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="pkg_hardware_config" value="$(arg pkg_hardware_config)"/>
		<arg name="name" value="$(arg name)"/>
	</include>

</launch>
