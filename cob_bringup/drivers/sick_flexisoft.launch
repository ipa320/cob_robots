<?xml version="1.0"?>
<launch>

	<arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
	<arg name="pkg_hardware_config" default="$(find cob_hardware_config)"/>

	<node ns="safety_controller" pkg="cob_safety_controller" type="safety_controller" name="safety_controller" respawn="false" output="screen" >
		<rosparam command="load" file="$(arg pkg_hardware_config)/$(arg robot)/config/flexisoft.yaml"/>
		<param name="front_xml" value="$(arg pkg_hardware_config)/$(arg robot)/config/laser_front.xml"/>
		<param name="left_xml" value="$(arg pkg_hardware_config)/$(arg robot)/config/laser_left.xml"/>
		<param name="right_xml" value="$(arg pkg_hardware_config)/$(arg robot)/config/laser_right.xml"/>
		<remap from="odometry" to="base_controller/odometry" />
	</node>



</launch>
