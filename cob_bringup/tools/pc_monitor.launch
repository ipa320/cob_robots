<?xml version="1.0"?>
<launch>

	<arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
	<arg name="pc" default="localhost"/>
	<arg name="diag_hostname" default="$(arg pc)"/>

	<!-- Monitor CPU (temp, usage) -->
	<node pkg="cob_monitoring" name="$(anon realtime_cpu_monitor)" type="cpu_monitor.py" args="--diag-hostname=$(arg diag_hostname)" output="screen">
		<rosparam command="load" file="$(find cob_hardware_config)/$(arg robot)/config/pc_monitor_$(arg pc).yaml"/>
	</node>

	<!-- Monitor hard disk (temp, usage) -->
	<node pkg="cob_monitoring" name="$(anon realtime_hd_monitor)" type="hd_monitor.py" args="--diag-hostname=$(arg diag_hostname)" output="screen"/>

	<!-- Monitor ntp -->
	<!--node pkg="cob_monitoring" name="$(anon realtime_ntp_monitor)" type="ntp_monitor.py" args="$(arg pc) -/-diag-hostname=$(arg pc)" output="screen">
		<rosparam command="load" file="$(find cob_hardware_config)/$(arg robot)/config/pc_monitor_$(arg pc).yaml"/>
	</node-->


</launch>
