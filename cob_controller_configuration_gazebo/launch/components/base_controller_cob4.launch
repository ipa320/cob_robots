<?xml version="1.0"?>
<launch>

	<arg name="robot" />
	<arg name="pkg_hardware_config" default="$(find cob_hardware_config)"/>

	<!-- cob Base Control -->
	<rosparam file="$(find cob_controller_configuration_gazebo)/controller/base_controller_cob4.yaml" command="load" />

	<!-- Controllers that come up started -->
	<node pkg="pr2_controller_manager" type="spawner" args="base_fl_caster_rotation_controller base_br_caster_rotation_controller base_bl_caster_rotation_controller  base_fl_caster_r_wheel_controller base_bl_caster_r_wheel_controller" name="base_controller_spawner"/>

	<!-- cob base controller -->
	<include file="$(find cob_bringup)/components/base/base.launch">
		<arg name="sim" value="true"/>
		<arg name="robot" value="$(arg robot)"/>
	</include>

</launch>
