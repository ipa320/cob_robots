<?xml version="1.0"?>
<launch>

	<arg name="robot"/>

	<!-- controller_manager -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/controller_manager.launch" />

	<!-- Base -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/base_controller_cob4.launch">
		<arg name="robot" value="$(arg robot)"/>
	</include>
		
	<include file="$(find cob_bringup)/components/sensors/relayboard.launch">
		<arg name="sim" value="true"/>
	</include>

	<!-- Torso -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/torso_controller_cob4.launch"/>

	<!-- Head -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/head_controller_cob4.launch"/>
	
	<!-- Sensorring -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/sensorring.launch"/>

</launch>
