<?xml version="1.0"?>
<launch>

	<arg name="robot" />

	<!-- controller_manager -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/controller_manager.launch" />

	<!-- Base -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/base_controller_raw.launch">
		<arg name="robot" value="raw3-1"/>
	</include>
	<include file="$(find cob_bringup)/components/relayboard.launch">
		<arg name="sim" value="true"/>
	</include>

	<!-- Arm -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/arm_controller_raw3-1.launch">
		<arg name="robot" value="raw3-1"/>
	</include>

	<!-- Torso -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/torso_controller_raw3-1.launch">
		<arg name="robot" value="raw3-1"/>
	</include>

	<!-- start additional components -->
	<include file="$(find cob_sound)/ros/launch/sound.launch" />
	<include file="$(find cob_bringup)/tools/base_collision_observer.launch" >
		<arg name="robot" value="raw3-1"/>
	</include>

</launch>
