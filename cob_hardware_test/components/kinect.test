<?xml version="1.0"?>
<launch>

	<!-- launch component or simulation-->
	<include file="$(find cob_bringup_sim)/launch/robot.launch" if="$(arg sim)" />
	<include file="$(find cob_bringup)/components/kinect.launch" unless="$(arg sim)" />
	<!-- upload testparameter -->
	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/kinect.yaml" command="load"/>
	<!-- perform test -->
	<test test-name="cob_hardware_test" pkg="cob_hardware_test" type="hztests" name="cob_hardware_test" time-limit="500.0" />

</launch>
