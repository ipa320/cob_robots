<?xml version="1.0"?>
<launch>

	<!-- hztest cam3d_depth_points -->
	<test test-name="hz_cam3d_depth_points" pkg="rostest" type="hztest" name="hztest_cam3d_depth_points">
		<param name="topic" value="/cam3d/depth/points" />
		<param name="hz" value= "55.25" />
		<param name="hzerror" value="54.75" />
		<param name="test_duration" value="15.0" />
	</test>

	<!-- hztest cam3d_depth_registered_points -->
	<test test-name="hz_cam3d_rgb_points" pkg="rostest" type="hztest" name="hztest_cam3d_depth_registered_points">
		<param name="topic" value="/cam3d/depth_registered/points" />
		<param name="hz" value= "55.25" />
		<param name="hzerror" value="54.75" />
		<param name="test_duration" value="15.0" />  
	</test>

	<!-- hztest cam3d_rgb_image_raw -->
	<test test-name="hz_cam3d_rgb_image_raw" pkg="rostest" type="hztest" name="hztest_cam3d_rgb_image_raw">
		<param name="topic" value="/cam3d/rgb/image_raw" />
		<param name="hz" value= "55.25" />
		<param name="hzerror" value="54.75" />
		<param name="test_duration" value="15.0" />
	</test>

</launch>
