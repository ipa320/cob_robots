<?xml version="1.0"?>
<launch>

	<!-- hztest emergency_stop_state -->
   <test test-name="hz_emergency_stop_state" pkg="rostest" type="hztest" name="hztest_emergency_stop_state">
    <param name="topic" value="emergency_stop_state" />  
    <param name="hz" value= "55.25" />
    <param name="hzerror" value="54.75" />
    <param name="test_duration" value="2.0" />  
   </test>

	<!-- hztest power_board_state -->	
   <test test-name="hz_power_board_state" pkg="rostest" type="hztest" name="hztest_power_board_state">
