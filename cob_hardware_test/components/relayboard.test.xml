    <param name="hz" value="55.25" />
    <param name="hzerror" value="54.75" />
    <param name="test_duration" value="2.0" />  
   </test>
  
	<!-- hztest power_board_voltage -->	
   <test test-name="hz_power_board_voltage" pkg="rostest" type="hztest" name="hztest_power_board_voltage">
